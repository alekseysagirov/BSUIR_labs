<Window x:Class="OSSP_lab3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="400"></ColumnDefinition>
            <ColumnDefinition Width="100"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0" Name="mainImage" Stretch="None"
               MouseLeftButtonDown="mainImage_MouseLeftButtonDown"
               MouseLeftButtonUp="mainImage_MouseLeftButtonUp"
               MouseMove="mainImage_MouseMove"></Image>
        <StackPanel Grid.Column="1">
            <Button Width="70" Height="30" Margin="5,5,5,5" Click="load_Click">Load</Button>
            <Button Width="70" Height="30" Margin="5,5,5,5" Click="save_Click">Save</Button>
            <Button Width="70" Height="30" Margin="5,5,5,5" Click="resize_Click">Resize</Button>
            <Button Width="70" Height="30" Margin="5,5,5,5" Click="flip_Click">Flip</Button>
            <Button Width="70" Height="30" Margin="5,5,5,5" Click="mirror_Click">Mirror</Button>
            <Button Width="70" Height="30" Margin="5,5,5,5" Click="brightness_Click">Brightness</Button>
            <Button Width="70" Height="30" Margin="5,5,5,5" Click="contrast_Click">Contrast</Button>
        </StackPanel>
    </Grid>
</Window>
